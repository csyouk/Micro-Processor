	.include "2440addr.inc"

	.code	32
	.text

	.global	__start
__start:
	@ Watch dog timer disable
	ldr		r0,=WTCON				
	ldr		r1,=0x0         
	str		r1,[r0]

	ldr		r0,=INTSUBMSK
	ldr		r1,=0x7fff				
	str		r1,[r0]
	
	ldr		r0,=INTMSK
	ldr		r1,=0xffffffff			
	str		r1,[r0]

	ldr		r0,=LOCKTIME
	ldr		r1,=0xffffffff			
	str		r1,[r0]

	ldr		r0,=CAMDIVN
	ldr		r1,=0x0 			
	str		r1,[r0]

	ldr		r0,=CLKDIVN
	ldr		r1,=0x5
	str		r1,[r0]

	ldr		r0,=MPLLCON
   	ldr		r1,= 0x6e031
	str		r1,[r0]
	
	ldr  	r0,=0xc000107a
	mcr  	p15,0,r0,c1,c0,0


@@@@@@@@@@@@@@@@ TEST @@@@@@@@@@@@@@@@@@@@@@@@@

	@ MOV R0, #0x3f000000

	@ ERROR
	@ ORR R0, R0, 0xffffff00

	@ SUCCEED
	@ LDR R1,=0xffffff00
	@ ORR R0, R0, R1


	@ ORR R0, R0, #0XFFFFFF00
	@ AND R0, R0, #0XFFFFFF00

	HERE: MOV R0, #10
		  STR R0, [R1]
 		  LDR PC, =HERE

	MOV PC,R12
	MOV R0, R0


	b	.

 .end

	.include "2440addr.inc"

	.code	32
	.text

	.global	__start
__start:
	@ Watch dog timer disable
	ldr		r0,=WTCON				
	ldr		r1,=0x0         
	str		r1,[r0]

	ldr		r0,=INTSUBMSK
	ldr		r1,=0x7fff				
	str		r1,[r0]
	
	ldr		r0,=INTMSK
	ldr		r1,=0xffffffff			
	str		r1,[r0]

	ldr		r0,=LOCKTIME
	ldr		r1,=0xffffffff			
	str		r1,[r0]

	ldr		r0,=CAMDIVN
	ldr		r1,=0x0 			
	str		r1,[r0]

	ldr		r0,=CLKDIVN
	ldr		r1,=0x5
	str		r1,[r0]

	ldr		r0,=MPLLCON
   	ldr		r1,= 0x6e031
	str		r1,[r0]
	
	ldr  	r0,=0xc000107a
	mcr  	p15,0,r0,c1,c0,0


@@@@@@@@@@@@@@@@ TEST @@@@@@@@@@@@@@@@@@@@@@@@@

	@ MOV R0, #0x3f000000

	@ ERROR
	@ ORR R0, R0, 0xffffff00

	@ SUCCEED
	@ LDR R1,=0xffffff00
	@ ORR R0, R0, R1


	@ ORR R0, R0, #0XFFFFFF00
	@ AND R0, R0, #0XFFFFFF00

@@@@@@@@@@@@@@@ [1] Led Control @@@@@@@@@@@@@@@@@

	@ LED=GPB[10:7]
	@ GPBCON Register configuration
	@ LDR R0, =GPBCON
	@ LDR R1, =0X00154000
	@ STR R1, [R0]   @store r1 value into r0 designated memory

	@ GPBDAT Register config
	@ LDR R0, =GPBDAT
	@ LDR R1, =0x300
	@ STR R1, [R0]



@@@@@@@@@@@@@@@ [2] Bit Operation @@@@@@@@@@@@@@@@@

	@ LED=GPB[10:7]
	@ GPBCON Register configuration
	@ LDR R0, =GPBCON
	@ LDR R1, [R0]

	@ BIC R1, R1, #0x3fc000
	@ ORR R1, R1, #0x154000

	@ STR R1, [R0]


	@ GPBDAT Register config
	@ LDR R0, =GPBDAT
	@ LDR R1, [R0]

	@ BIC R1, R1, #0x780
	@ ORR R1, R1, #0x300

	@ STR R1, [R0]





@@@@@@@@@@@@@@@ [3] Pseudo Operator @@@@@@@@@@@@@@@@@


	@ LED=GPB[10:7]
	@ GPBCON Register configuration
	LDR R0, =GPBCON
	LDR R1, [R0]

	BIC R1, R1, #(0XFF << 14)
	ORR R1, R1, #(0X55 << 14)

	STR R1, [R0]


	@ GPBDAT Register config
	LDR R0, =GPBDAT
	LDR R1, [R0]

	BIC R1, R1, #(0XF << 7)
	ORR R1, R1, #(0X6 << 7)

	STR R1, [R0]




	@@@@@ TEST @@@@@@@@@@

	MOV R0, #0xffff03ff






	b	.

 .end
